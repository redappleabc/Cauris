{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "./dist/",
    "rootDir": ".",
    "baseUrl": "./src",
    "paths": {
      "@servichain*": ["./*"]
    },
    "moduleResolution": "node",
    "target": "es6",
    "composite": true,
    "sourceMap": true,
    "declaration": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "typeRoots": [
        "node_modules/@types"
    ]
  },
  "exclude": ["../test/*", "**/*.spec.ts", "node_modules"],
  "include": ["src/**/*", "./src/files/erc20.abi.json", "./src/files/test-token.json"]
}